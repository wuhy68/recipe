/* miniprogram/pages/userInfo/userInfo.wxss */
.title {
  font-size: 60rpx;
  display: flex; /* 设置显示样式 */
  justify-content: center; /* 内容居中 */
}

.subtitle {
  font-size: 40rpx;
  display: flex; /* 设置显示样式 */
  justify-content: center; /* 内容居中 */
}

.layout {
  display: flex;  
  flex-direction: row;
}

.avatar {
  height: 100px;
  width: 100px;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
}

.divLine {
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
  margin-top: 13px;
}

.wholeStyle{
  margin-left: 5%;
  margin-right: 5%;  
}

.favoritesList{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}

.favoritesItem{
  width: 320rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-right: 5rpx;
  margin-left: 5rpx;
}

.favoritesItemImage{
  width: 320rpx;
  height: 250rpx;  
  border-radius: 10rpx;
}

.favoritesItemAuthor{
  display: flex;
  flex-direction: row;
}

.favoritesItemAuthorText{
  width: 100%;
  height: 40rpx;
  text-align: left;
  margin-top: 15rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
  color: gray;
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
}

.favoritesItemName {
  width: 100%;
  height: 45rpx;
  text-align: left;
  margin-top: 15rpx;  
  font-size: 35rpx;
}

.favoritesItemAuthorIcon{
  margin-top:15rpx;
  margin-bottom:15rpx;
  width: 37rpx;
  height: 37rpx;
  margin-left:30rpx;
}

.favoritesItemTime{
  width: 100%;
  height: 40rpx;
  text-align: left;
  font-size: 30rpx;
  color: gray;
}

.beauttext{
  font-size: large;
  color: rgb(47, 189, 158);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.butt{
  color: rgb(72, 117, 199);
  font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
}

.button1{
  color: gold;
  background-color: lightblue;
}
