/* pages/search/search.wxss */

.wholeStyle{
  margin-left: 5%; 
  margin-right: 5%;
}

.SearchInput{
  margin: 30rpx auto;
	width: 560rpx;
	height: 72rpx;
	left: 13rpx;
	top: 116rpx;
	color: rgba(80, 80, 80, 1);
	background-color: rgba(233, 233, 233, 1);
	border-radius: 7rpx;
	font-size: 32rpx;
	line-height: 150%;
  text-align: center;
  display: flex;
}

.select{
  box-sizing: border-box;
  width:100%;
  height: 72rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  height: 72rpx;
  font-size: 30rpx;
  flex: 1;
  margin-top: 15rpx;
  margin-left: 15rpx;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}

.select_box{
  width: 30%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  border-top: 0;
}

.option_box{
  margin: 30rpx auto;
  position: absolute;
  z-index: 1;
  top: 72rpx;
  width: 20%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

.searchItem{
  text-align: left;
  margin-top: 8rpx;
  margin-left: 15rpx;
}

.searchButton{
  width: 660rpx;
	height: 90rpx;
	color: rgba(255, 255, 255, 1);
	background-color: rgba(233, 68, 68, 1);
	box-shadow: rgba(193, 52, 52, 1) solid 2rpx;
	border-radius: 45rpx;
	font-size: 35rpx;
	line-height: 150%;
  text-align: center;
}

.searchButton_hover{
  background-color: rgb(235, 95, 95);
}

.searchHistory{
  margin: 40rpx 40rpx 30rpx 40rpx;
}

.searchHistoryItem{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  margin: 30rpx auto;
}

.searchHistoryItem_hover{
  opacity: 0.9;
  background: #c7c5c5;
  border-radius: 20rpx;
}

.searchHistoryItemText{
  margin:auto 30rpx;
  color: #a29f9f;
  font-size: 35rpx;
}