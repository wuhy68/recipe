<!--pages/commentReceive/commmentReceive.wxml-->
<view class="wholeStyle">
  <view class="CommentList">
		<view wx:for="{{CommentListIndex}}" wx:for-item="item" wx:if="{{item.index <= MaxShowComment}}">
			<view class="CommentItem">
				<view class="CommentUserInfoAndAgreeCount">
					<view class="CommentUserHeadImage">
						<image class="CommentUserHeadImageImage" src="{{item.headImage}}"></image>
					</view>
					<view class="CommentUserNameAndTime">
						<view class="CommentUserName"><text>{{item.id}} 回复了: {{item.title}}</text></view>
						<view class="CommentUserTime"><text>{{item.time}}</text></view>
					</view>
					<view class="CommentAgreeCount" bindtap="goToRecipeInfo">
						<view class="CommentAgreeCountImage">
							<image class="CommentAgreeCountIcon" src="../../image/response.png"></image>
						</view>
						<view class="CommentAgreeCountText"><text>回复</text></view>
					</view>
				</view>
				<view class="CommentContext"><text>{{item.context}}</text></view>
			</view>
		</view>
  </view>
</view>