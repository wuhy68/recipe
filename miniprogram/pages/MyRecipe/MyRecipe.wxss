/* pages/MyRecipe/MyRecipe.wxss */

.wholeStyle{
  margin-left: 5%;
  margin-right: 5%;
}

.favoritesList{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}

.favoritesItem{
  width: 320rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-right: 5rpx;
  margin-left: 5rpx;
}

.favoritesItemImage{
  width: 320rpx;
  height: 250rpx;  
  border-radius: 10rpx;
}

.favoritesItemAuthor{
  display: flex;
  flex-direction: row;
}

.favoritesItemAuthorText{
  width: 100%;
  height: 40rpx;
  text-align: left;
  margin-top: 15rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  color: gray;
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
}

.favoritesItemAuthorIcon{
  margin-top:15rpx;
  margin-bottom:15rpx;
  width: 37rpx;
  height: 37rpx;
}

.favoritesItemTime{
  width: 100%;
  height: 40rpx;
  text-align: center;
  margin:30rpx auto;
  font-size: 30rpx;
  color: gray;
}